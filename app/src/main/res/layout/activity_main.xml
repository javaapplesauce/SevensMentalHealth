<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/dark_grey"
    >


    <ImageView
        android:id="@+id/logoDrawable"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:padding="32dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/logoDrawable"
        android:layout_centerHorizontal="true"
        android:id="@+id/nameDrawable"

        app:srcCompat="@drawable/title" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nameDrawable"
        android:background="@color/dark_grey"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainPageButton"
        android:src="@drawable/mainpage_play_button"
        android:onClick="goToActivityContent"
    />

</RelativeLayout>